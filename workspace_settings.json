{
    "github.copilot.nextEditSuggestions.enabled": true,

    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "latexmk (xelatex)",
            "tools": [
                "xelatexmk"
            ]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex * 2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Jnw files",
            "tools": [
                "jnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Pnw files",
            "tools": [
                "pnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "tectonic",
            "tools": [
                "tectonic"
            ]
        },
        {
            "name": "MyQuickCompile",
            "tools": [
                "MyQuickCompiler"
            ]
        },
        {
            "name": "MyFullCompile",
            "tools": [
                "MyFullCompiler"
            ]
        }
    ],

    "latex-workshop.latex.tools": [
    {
        "name": "MyQuickCompiler",
        "command": "powershell",
        "args": [
            "-NoProfile",
            "-ExecutionPolicy", "Bypass",
            "-Command",
            "cd 'C:/Active Files (custom)/LaTeX workspace';",
            "./quick_compile.bat", "'%DOC%'"
        ]
    },
    {
        "name": "MyFullCompiler",
        "command": "powershell",
        "args": [
            "-NoProfile",
            "-ExecutionPolicy", "Bypass",
            "-Command",
            "cd 'C:/Active Files (custom)/LaTeX workspace';",
            "./compile.bat", "'%DOC%'"
        ]
    }
    ],

    "latex-workshop.latex.recipe.default": "MyQuickCompile",
    "editor.minimap.enabled": false,
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hant": true
    },
    "git.autofetch": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "latex": true
    }
}